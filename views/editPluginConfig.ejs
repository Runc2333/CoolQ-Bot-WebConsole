<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=0">
    <meta name="author" content="Runc" />
    <title><%= title %></title>
    <link href="/css/materialize.min.css" rel="stylesheet" type="text/css" media="screen">
    <link href="/css/project.css" rel="stylesheet" type="text/css" media="screen">
    <link href="/css/user/user.css" rel="stylesheet" type="text/css" media="screen">
</head>

<body>
    <div class="editNav">
        <a href="/user/configureGroup/pluginConfig?groupId=<%- groupId %>" class="waves-effect"><i class="material-icons">arrow_back</i></a>
        <font><%= navtitle %></font>
    </div>
    <div class="editCardContainer">
        <% data.forEach(item => { %>
        <div class="editCard">
            <div class="row" style="margin: 0;">
                <% columns.forEach(column => { %>
                <% if(column.type === 'select'){ %> 
                    <div class="input-field col s12">
                        <select>
                            <% for(key in column.option){ %> 
                                <option value="<%- key %>"><%- column.option[key] %></option>
                            <% } %>
                        </select>
                        <label><% column.alias %> </label>
                    </div>
                <% }else if (column.type === 'input') {%>
                    <div class="input-field col s12">
                        <input placeholder="<%- column.alias %>" id="<%- column.name %>"  type="text" class="validate">
                        <label for="first_name"><%- column.alias %></label>
                    </div>
                <% } %> 
                <% }) %>
            </div>
        </div>
        <% }) %>
        <div class="editCard">
            <div class="row" style="margin: 0;">
                <% columns.forEach(column => { %>
                <% if(column.type === 'select'){ %> 
                    <div class="input-field col s12">
                        <select>
                            <% for(key in column.option){ %> 
                                <option value="<%- key %>"><%- column.option[key] %></option>
                            <% } %>
                        </select>
                        <label><%- column.alias %></label>
                    </div>
                <% }else if (column.type === 'input') {%>
                    <div class="input-field col s12">
                        <input placeholder="<%- column.alias %>" id="<%- column.name %>"  type="text" class="validate">
                        <label for="<%- column.name %>"><%- column.alias %></label>
                    </div>
                <% } %> 
                <% }) %>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/js/materialize.min.js"></script>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/user/pluginconfig.js"></script>
</body>

</html>